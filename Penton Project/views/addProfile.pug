extends ./_layout.pug
block selectedLinks
  a(href='/', class='mdl-layout__tab') Home
  a(href='/posts', class='mdl-layout__tab') Posts
  a(href='/profile/userinfo', class='mdl-layout__tab') Profile
  a(href='/about', class='mdl-layout__tab') About
  a(href='/addProfile', class='mdl-layout__tab is-active') Add Profile

block template
  div.mdl-grid
    div.mdl-layout-spacer
    div(class='mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col add-profile-page')
      h2(class='mdle-card__title-text') Add Profile
      div(class='mdl-card__title')

        form(action="/userProfiles/addProfile", method='POST')
          each inputeTitle, index in formElements
            div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
              input(class="mdl-textfield__input" type="text" name='profileInpute'+index)
              label(class="mdl-textfield__label" for="sample3")= inputeTitle
          button(type='submit' class='mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect') Submit



      div(class='mdl-card__supporting-text')
        //- a(class='mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect ') Tips to prepare for your workout
    div.mdl-layout-spacer
